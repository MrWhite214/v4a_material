<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:paddingBottom="45.0dip">

        <TextView
            android:id="@id/v4a_tv_playback_effect"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginTop="35.0dip"
            android:gravity="center"
            android:text="@string/pref_effect_title" />

        <ImageView
            android:id="@id/v4a_iv_knob_bg_3point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_effect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35.0dip"
            android:src="@mipmap/knob_bg_3point" />

        <ImageView
            android:id="@id/v4a_iv_knob_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_effect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35.0dip"
            android:scaleType="matrix"
            android:src="@mipmap/knob_point" />

        <com.audlabs.viperfx.widget.TouchRotateButton
            android:id="@id/v4a_trb_playback_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_effect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35.0dip" />

        <TextView
            android:id="@id/v4a_tv_playback_effect_moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_effect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dip" />

        <TextView
            android:id="@id/v4a_tv_playback_effect_slight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_effect"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="47.0dip"
            android:layout_marginTop="35.0dip"
            android:layout_toLeftOf="@id/v4a_tv_playback_effect_moderate" />

        <TextView
            android:id="@id/v4a_tv_playback_effect_extreme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_effect"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="47.0dip"
            android:layout_marginTop="35.0dip"
            android:layout_toRightOf="@id/v4a_tv_playback_effect_moderate" />

        <TextView
            android:id="@id/v4a_tv_playback_maxgain"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_below="@id/v4a_trb_playback_effect"
            android:layout_marginTop="25.0dip"
            android:gravity="center"
            android:text="@string/pref_playback_maxgain" />

        <TextView
            android:id="@id/v4a_tv_playback_maxgain_val"
            android:layout_width="100.0dip"
            android:layout_height="35.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/v4a_tv_playback_maxgain"
            android:background="@mipmap/input"
            android:gravity="center" />

        <SeekBar
            android:id="@id/v4a_sb_playback_maxgain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_maxgain"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="18.5dip"
            android:focusable="true"
            android:max="100"
            android:maxHeight="5.0dip"
            android:minHeight="5.0dip"
            android:progressDrawable="@drawable/default_seekbar" />

        <TextView
            android:id="@id/v4a_tv_playback_output_threshold"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_below="@id/v4a_sb_playback_maxgain"
            android:layout_marginTop="35.0dip"
            android:gravity="center"
            android:text="@string/pref_playback_output_threshold" />

        <TextView
            android:id="@id/v4a_tv_playback_output_threshold_val"
            android:layout_width="100.0dip"
            android:layout_height="35.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/v4a_tv_playback_output_threshold"
            android:background="@mipmap/input"
            android:gravity="center" />

        <SeekBar
            android:id="@id/v4a_sb_playback_output_threshold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_playback_output_threshold"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="18.5dip"
            android:focusable="true"
            android:max="50"
            android:maxHeight="5.0dip"
            android:minHeight="5.0dip"
            android:progressDrawable="@drawable/default_seekbar" />
    </RelativeLayout>
</ScrollView>