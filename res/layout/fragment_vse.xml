<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:paddingBottom="45.0dip">

        <TextView
            android:id="@id/v4a_tv_vse"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:textColor="@color/fragment_text_color"
            android:layout_marginTop="35.0dip"
            android:gravity="center"
            android:text="@string/pref_vse_strength_title" />

        <TextView
            android:id="@id/v4a_tv_vse_val"
            android:layout_width="50.0dip"
            android:textColor="@color/fragment_text_color"
            android:layout_height="35.0dip"
            android:layout_alignTop="@id/v4a_tv_vse"
            android:layout_alignParentRight="true"
            android:background="@drawable/input"
            android:gravity="center" />

        <com.audlabs.viperfx.widget.TouchRotateButton
            android:id="@id/v4a_trb_vse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4a_tv_vse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25.0dip" />

        <com.audlabs.viperfx.widget.ProgressBarView
            android:id="@id/v4a_pbv_vse"
            android:layout_width="230.0dip"
            android:layout_height="230.0dip"
            android:layout_below="@id/v4a_tv_vse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25.0dip" />
    </RelativeLayout>
</ScrollView>