<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16.0dp"
        android:paddingRight="16.0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88.0dp">

            <TextView
                android:id="@id/id_tv_output_pan"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:layout_marginTop="16.0dip"
                android:gravity="center"
                android:text="@string/pref_output_pan" />

            <CheckBox
                android:id="@id/id_output_pan_enable"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:id="@id/id_tv_output_pan_val"
                android:layout_width="96.0dip"
                android:layout_height="32.0dip"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/id_tv_output_pan"
                android:background="@drawable/input"
                android:gravity="center" />

            <SeekBar
                android:id="@id/id_sb_output_pan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_output_pan"
                android:focusable="true"
                android:max="200"
                android:maxHeight="8.0dip"
                android:minHeight="8.0dip"
                android:paddingBottom="12.0dp"
                android:paddingTop="12.0dp"
                android:progress="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88.0dp">

            <TextView
                android:id="@id/id_tv_output_gain"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:layout_marginTop="16.0dip"
                android:gravity="center"
                android:text="@string/pref_output_gain" />

            <CheckBox
                android:id="@id/id_output_gain_enable"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:id="@id/id_tv_output_gain_val"
                android:layout_width="96.0dip"
                android:layout_height="32.0dip"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/id_tv_output_gain"
                android:background="@drawable/input"
                android:gravity="center" />

            <SeekBar
                android:id="@id/id_sb_output_gain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_output_gain"
                android:focusable="true"
                android:max="210"
                android:maxHeight="8.0dip"
                android:minHeight="8.0dip"
                android:paddingBottom="12.0dp"
                android:paddingTop="12.0dp"
                android:progress="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88.0dp">


            <TextView
                android:id="@id/id_tv_limiter_threshold"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:layout_marginTop="16.0dip"
                android:gravity="center"
                android:text="@string/pref_fx_limiter_threshold" />

            <CheckBox
                android:id="@id/id_limiter_threshold_enable"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:id="@id/id_tv_limiter_threshold_val"
                android:layout_width="96.0dp"
                android:layout_height="32.0dip"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/id_tv_limiter_threshold"
                android:background="@drawable/input"
                android:gravity="center" />

            <SeekBar
                android:id="@id/id_sb_limiter_threshold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_limiter_threshold"
                android:focusable="true"
                android:max="50"
                android:maxHeight="8.0dip"
                android:minHeight="8.0dip"
                android:paddingBottom="12.0dp"
                android:paddingTop="12.0dp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>